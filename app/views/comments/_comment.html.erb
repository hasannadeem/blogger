<tr id="comment-<%= comment.id %>">
	<td> <strong> <%=comment.user.name + "  " %> </strong>  <i> <%= comment.body %>  </i> </td>

	<td>
    	<%= "Reported by : " %>
     	<ul id='<%= comment.id %>'>
     	<% arr = comment.reports.includes(:user).pluck(:name) %>
	        <% arr.each do |name| %>
	        	<li>  <%=  name %> </li> 
	        <% end %> 
      	<ul>
    </td>

	<td><% if current_user.id == comment.user_id %> <%= link_to 'Destroy', post_comment_path(@post,comment), method: :delete, remote: true, data: { confirm: 'Are you sure?' } %> | <%= link_to 'Edit', edit_post_comment_path(@post,comment) %> | <% end%> <%=link_to'Report',report_post_comment_path(@post,comment), method: :post, remote: true %> </td>
</tr>